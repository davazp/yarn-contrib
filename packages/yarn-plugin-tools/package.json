{
  "name": "@larry1123/yarn-plugin-tools",
  "license": "Apache-2.0",
  "main": "src/index.ts",
  "files": [
    "esm",
    "lib"
  ],
  "scripts": {
    "pre-build": "yarn run clean",
    "build": "yarn run build:yarn-plugin-tools",
    "build:yarn-plugin-tools": "yarn run build:cjs --declaration && yarn run build:esm --declaration",
    "clean": "yarn run clean:yarn-plugin-tools",
    "clean:yarn-plugin-tools": "rm -rf lib esm",
    "format": "yarn run format:package.json && yarn run format:prettier && yarn run lint:eslint --fix",
    "prepack": "yarn run build",
    "run:resolveYarnVersions": "yarn run run:ts-node src/bin/resolveYarnVersions.ts"
  },
  "dependencies": {
    "@yarnpkg/cli": "^2.3.2",
    "@yarnpkg/core": "^2.3.0",
    "@yarnpkg/fslib": "^2.3.0",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^12.0.0",
    "typescript-transform-paths": "^2.0.1"
  },
  "publishConfig": {
    "bin": {
      "resolveYarnVersions": "./lib/bin/resolveYarnVersions.js"
    },
    "main": "lib/index.js",
    "module": "esm/index.js",
    "types": "lib/index.d.ts"
  }
}
