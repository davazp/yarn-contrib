{
  "name": "@larry1123/yarn-plugin-production-install",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "main": "src/index.ts",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "pre-build": "yarn run clean",
    "build": "yarn run build:plugin-production-install",
    "build:plugin-production-install": "yarn run build:cjs && yarn run build:plugin",
    "clean": "yarn run clean:plugin-production-install",
    "clean:plugin-production-install": "rm -rf lib bundles",
    "format": "yarn run format:package.json && yarn run format:prettier && yarn run lint:eslint --fix",
    "pre-test": "rm -rf out/",
    "test": "yarn prod-install out",
    "post-test": "cp -R lib/. out/"
  },
  "dependencies": {
    "@yarnpkg/cli": "^2.3.1",
    "@yarnpkg/core": "^2.3.0",
    "@yarnpkg/fslib": "^2.2.2",
    "@yarnpkg/plugin-pack": "^2.2.1",
    "@yarnpkg/plugin-patch": "^2.1.2",
    "clipanion": "^2.6.2"
  },
  "devDependencies": {
    "typescript-transform-paths": "^2.0.1"
  },
  "peerDependencies": {
    "@yarnpkg/cli": "*",
    "@yarnpkg/core": "*",
    "@yarnpkg/fslib": "*",
    "@yarnpkg/plugin-pack": "*",
    "@yarnpkg/plugin-patch": "*",
    "clipanion": "*"
  },
  "optionalDependencies": {
    "@types/node": "^12.0.0"
  },
  "publishConfig": {
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts"
  },
  "pluginEnabled": true
}
